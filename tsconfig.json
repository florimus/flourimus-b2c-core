{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@config": ["./runtimeConfig"],
      "@routes/*": ["./src/routes/*"],
      "@server/*": ["src/bin/*"],
      "@controller/*": ["./src/controller/*"],
      "@middleware/*": ["./src/middleware/*"],
      "@persistence/*": ["./src/persistence/*"],
      "@core/*": ["./src/core/*"],
      "@service/*": ["./src/service/*"],
      "@helpers/*": ["./src/helpers/*"],
      "@statusCodes": ["./src/core/statusCodes"],
      "@fixtures/*": ["./src/__test__/fixtures/*"],
      "@types": ["./src/core/types.d.ts"],
      "@src/*": ["./src/*"],
    },
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "coverage", "dist"]
}
